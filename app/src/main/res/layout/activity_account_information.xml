<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_islamic_pattern">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAccountInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:drawablePadding="@dimen/_12sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/account_information"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/ic_left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/tvAllInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_21sdp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/all_information"
        android:textColor="@color/sub_text_color"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:drawableStart="@drawable/ic_edit_green"
        android:drawablePadding="@dimen/_4sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/edit"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvAllInfo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bnv"
        app:layout_constraintStart_toStartOf="@+id/tvAllInfo"
        app:layout_constraintTop_toBottomOf="@+id/tvAllInfo">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            >

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/first_name"

                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="0dp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/bg_edit_text_regular"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="@dimen/_9sdp"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/cairo_medium"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_9sdp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView64"
                app:layout_constraintTop_toBottomOf="@+id/textView64" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/lastname"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/textView64"
                app:layout_constraintTop_toBottomOf="@+id/etFirstName" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="0dp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/bg_edit_text_regular"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="@dimen/_9sdp"
                android:ems="10"
                android:enabled="false"

                android:fontFamily="@font/cairo_medium"
                android:hint="@string/lastname"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_9sdp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView64"
                app:layout_constraintTop_toBottomOf="@+id/textView65" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/lastname"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/textView65"
                app:layout_constraintTop_toBottomOf="@+id/etLastName" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/sex"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/textView66"
                app:layout_constraintTop_toBottomOf="@+id/etAgeCategory" />

            <TextView
                android:id="@+id/tvMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/male"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/textView67"
                app:layout_constraintTop_toBottomOf="@+id/etAgeCategory" />

            <EditText
                android:id="@+id/etAgeCategory"
                android:layout_width="0dp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_text_regular"
                android:drawableStart="@drawable/ic_age_category"
                android:drawablePadding="@dimen/_9sdp"
                android:ems="10"
                android:enabled="false"

                android:drawableEnd="@drawable/ic_bottom_arrow"
                android:focusable="false"
                android:clickable="true"
                android:fontFamily="@font/cairo_medium"
                android:hint="@string/age_rate"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/etLastName"
                app:layout_constraintStart_toStartOf="@+id/etLastName"
                app:layout_constraintTop_toBottomOf="@+id/textView66" />

            <TextView
                android:id="@+id/textView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/learning_language"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/textView67"
                app:layout_constraintTop_toBottomOf="@+id/textView67" />

            <EditText
                android:id="@+id/etLearningLanguage"
                android:layout_width="0dp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_text_regular"
                android:drawableStart="@drawable/ic_world"
                android:drawablePadding="@dimen/_9sdp"
                android:ems="10"
                android:enabled="false"

                android:drawableEnd="@drawable/ic_bottom_arrow"
                android:focusable="false"
                android:clickable="true"
                android:fontFamily="@font/cairo_medium"
                android:hint="@string/learning_language"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/etAgeCategory"
                app:layout_constraintStart_toStartOf="@+id/etAgeCategory"
                app:layout_constraintTop_toBottomOf="@+id/textView69" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/prefered_rewaya"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/textView69"
                app:layout_constraintTop_toBottomOf="@+id/etLearningLanguage" />

            <TextView
                android:id="@+id/tvOrganizationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/organization"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/textView70"
                app:layout_constraintTop_toBottomOf="@+id/etPreferedRewaya" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/textView70"
                app:layout_constraintTop_toBottomOf="@+id/etOrgnization" />

            <TextView
                android:id="@+id/tvEmailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/email"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/tvOrganizationTitle"
                app:layout_constraintTop_toBottomOf="@+id/etPhoneNumber" />

            <EditText
                android:id="@+id/etOrgnization"
                android:layout_width="0dp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_text_regular"
                android:drawablePadding="@dimen/_9sdp"
                android:ems="10"
                android:fontFamily="@font/cairo_medium"
                android:hint="@string/organization"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/etAgeCategory"
                app:layout_constraintStart_toStartOf="@+id/etAgeCategory"
                app:layout_constraintTop_toBottomOf="@+id/tvOrganizationTitle" />

            <include
                android:id="@+id/etPhoneNumber"
                layout="@layout/include_phone_number"
                android:layout_width="0dp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginTop="4dp"

                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPhone" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_text_regular"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="@dimen/_9sdp"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/cairo_medium"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/etAgeCategory"
                app:layout_constraintStart_toStartOf="@+id/etAgeCategory"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailTitle" />

            <EditText
                android:id="@+id/etPreferedRewaya"
                android:layout_width="0dp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginTop="8dp"
                android:drawableEnd="@drawable/ic_bottom_arrow"
                android:background="@drawable/bg_edit_text_regular"
                android:drawableStart="@drawable/ic_quraan"
                android:drawablePadding="@dimen/_9sdp"
                android:ems="10"
                android:enabled="false"

                android:fontFamily="@font/cairo_medium"
                android:hint="@string/prefered_rewaya"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_14sdp"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/etAgeCategory"
                app:layout_constraintStart_toStartOf="@+id/etAgeCategory"
                app:layout_constraintTop_toBottomOf="@+id/textView70" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_green_button"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/confirm_changes"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/etEmail"
                app:layout_constraintStart_toStartOf="@+id/etEmail"
                app:layout_constraintTop_toBottomOf="@+id/etEmail" />

            <Spinner
                android:id="@+id/spAgeCategory"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/etAgeCategory"
                app:layout_constraintEnd_toEndOf="@+id/etAgeCategory"
                app:layout_constraintStart_toStartOf="@+id/etAgeCategory"
                app:layout_constraintTop_toTopOf="@+id/etAgeCategory" />

            <Spinner
                android:id="@+id/spLearningLanguage"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/etLearningLanguage"
                app:layout_constraintEnd_toEndOf="@+id/etLearningLanguage"
                app:layout_constraintStart_toStartOf="@+id/etAgeCategory"
                app:layout_constraintTop_toTopOf="@+id/etLearningLanguage" />

            <Spinner
                android:id="@+id/spPreferedRewaya"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/etPreferedRewaya"
                app:layout_constraintEnd_toEndOf="@+id/etPreferedRewaya"
                app:layout_constraintStart_toStartOf="@+id/etPreferedRewaya"
                app:layout_constraintTop_toTopOf="@+id/etPreferedRewaya" />

            <LinearLayout
                android:id="@+id/llSex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/textView67"
                app:layout_constraintStart_toEndOf="@+id/textView67"
                app:layout_constraintTop_toTopOf="@+id/textView67">

                <CheckBox
                    android:id="@+id/cbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:button="@drawable/custom_checkbox"
                    android:checked="true"
                    android:drawablePadding="@dimen/_12sdp"
                    android:fontFamily="@font/cairo_bold"
                    android:paddingStart="@dimen/_12sdp"
                    android:text="@string/male"
                    android:textColor="@color/gray_border_color"
                    app:layout_constraintStart_toStartOf="@+id/etLearningLanguage"
                    app:layout_constraintTop_toBottomOf="@+id/etLearningLanguage" />

                <CheckBox
                    android:id="@+id/cbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:button="@drawable/custom_checkbox"
                    android:checked="false"
                    android:drawablePadding="@dimen/_12sdp"
                    android:fontFamily="@font/cairo_bold"
                    android:paddingStart="@dimen/_12sdp"
                    android:text="@string/female"
                    android:textColor="@color/gray_border_color"
                    app:layout_constraintStart_toEndOf="@+id/cbMale"
                    app:layout_constraintTop_toBottomOf="@+id/etLearningLanguage" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/main_menu"

        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>