<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llSessionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:paddingVertical="4dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:gravity="center"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                />

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_medium"
                android:gravity="center"
                android:text="11-12-1444"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:23"
                android:gravity="center"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                />

            <TextView
                android:id="@+id/tvHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_medium"
                android:gravity="center"
                android:text="9:40 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

        <TextView
            android:id="@+id/etFromSurah"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Al-Imran"
            android:layout_gravity="center"

            android:fontFamily="@font/cairo_regular"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            />


        <TextView
            android:id="@+id/etFromAyah"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="80"
            android:layout_gravity="center"

            android:fontFamily="@font/cairo_regular"
            android:gravity="center"

            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            />

        <TextView
            android:id="@+id/etToSurah"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:text="Al-Imran"
            android:layout_gravity="center"

            android:fontFamily="@font/cairo_regular"
            android:gravity="center"

            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            />


        <TextView
            android:id="@+id/etToAyah"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="100"
            android:fontFamily="@font/cairo_regular"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_9ssp"
            />

        <ImageView
            android:id="@+id/ivRecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:enabled="false"
            android:src="@drawable/ic_record_exist"
            android:gravity="center"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llSessionExtendedDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/llSessionDetails">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvPageNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_clarity_book_line"
                android:fontFamily="@font/cairo_medium"
                android:gravity="center"
                android:paddingTop="@dimen/_4sdp"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/page"
                android:textColor="@color/darker_green_color"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLetterNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_green_circle"
                android:fontFamily="@font/cairo_medium"

                android:gravity="center"
                android:text="600"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/letter"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_2sdp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAyahNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_islamic_star"
                android:fontFamily="@font/cairo_medium"
                android:gravity="center"
                android:text="40"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/ayah"
                android:textColor="@color/yellow_color"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAdditionalSessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_additional_sessions"
                android:fontFamily="@font/cairo_bold"

                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:text="@string/additional_sessions"

                android:textColor="@color/primary_color"
                android:textSize="@dimen/_9ssp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="@string/teacher_cap"
                android:textColor="@color/sub_text_color"
                android:textSize="@dimen/_7ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rate"
                    android:drawablePadding="@dimen/_2sdp"
                    android:fontFamily="@font/cairo_bold"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:gravity="center"
                    android:text="@string/rate_cap"
                    android:textColor="@color/lighter_yellow_color"
                    android:textSize="@dimen/_7ssp"
                    app:drawableEndCompat="@drawable/ic_rate_indicator" />

                <TextView
                    android:id="@+id/tvReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:background="@drawable/bg_report"
                    android:drawablePadding="@dimen/_2sdp"
                    android:fontFamily="@font/cairo_bold"
                    android:paddingVertical="@dimen/_1sdp"
                    android:gravity="center"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:text="@string/report_cap"
                    android:textColor="@color/our_red"
                    android:textSize="@dimen/_7ssp"
                    app:drawableEndCompat="@drawable/ic_outline_report" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llArrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llSessionExtendedDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivDetailsArrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down_arrow_session"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_border_color"
        app:layout_constraintTop_toBottomOf="@id/llArrow"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>